@model WebProgramming.Models.Appointment

<h2>Yeni Randevu Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Kullanıcı</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ServiceId" class="form-label">Hizmet</label>
        <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AppointmentTime" class="form-label">Tarih ve Saat</label>
        <input asp-for="AppointmentTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Durum</label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
