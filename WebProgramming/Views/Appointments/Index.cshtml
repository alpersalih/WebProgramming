@model IEnumerable<WebProgramming.Models.Appointment>

<h2>Randevular</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı</th>
            <th>Hizmet</th>
            <th>Tarih ve Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.User.FirstName @item.User.LastName</td>
                <td>@item.Service.Name</td>
                <td>@item.AppointmentTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
