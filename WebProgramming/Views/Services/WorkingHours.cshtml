@model IEnumerable<WebProgramming.Models.WorkingHours>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışma Saatleri</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Çalışma Saatleri</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Gün</th>
                    <th scope="col">Başlangıç Saati</th>
                    <th scope="col">Bitiş Saati</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hours in Model)
                {
                    <tr>
                        <td>@hours.Day</td>
                        <td>@hours.StartTime.ToString(@"hh\:mm")</td>
                        <td>@hours.EndTime.ToString(@"hh\:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

