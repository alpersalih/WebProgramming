@model IEnumerable<WebProgramming.Models.Service>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hizmet Yönetimi</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Hizmet Yönetimi</h1>

        <!-- Yeni Hizmet Ekleme Formu -->
        <div class="mb-4">
            <h4>Yeni Hizmet Ekle</h4>
            <form asp-action="AddService" method="post" class="row g-3">
                <div class="col-md-4">
                    <label for="ServiceName" class="form-label">İşlem Adı</label>
                    <input type="text" name="ServiceName" id="ServiceName" class="form-control" placeholder="Örn. Saç Kesimi" required>
                </div>
                <div class="col-md-4">
                    <label for="Duration" class="form-label">Süre (Dakika)</label>
                    <input type="number" name="Duration" id="Duration" class="form-control" placeholder="Örn. 30" required>
                </div>
                <div class="col-md-4">
                    <label for="Price" class="form-label">Ücret (TL)</label>
                    <input type="number" step="0.01" name="Price" id="Price" class="form-control" placeholder="Örn. 50" required>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>

        <!-- Hizmet Listesi -->
        <h4>Mevcut Hizmetler</h4>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">İşlem Adı</th>
                    <th scope="col">Süre</th>
                    <th scope="col">Ücret</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.ServiceName</td>
                        <td>@service.Duration</td>
                        <td>@service.Price</td>
                        <td>
                            <a asp-action="EditService" asp-route-id="@service.ServiceID" class="btn btn-warning btn-sm">Düzenle</a>
                            <form asp-action="DeleteService" asp-route-id="@service.ServiceID" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
