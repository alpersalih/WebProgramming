@model IEnumerable<WebProgramming.Models.Appointment>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevular</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Randevular</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Müşteri Adı</th>
                    <th scope="col">İşlem</th>
                    <th scope="col">Tarih ve Saat</th>
                    <th scope="col">Durum</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.CustomerName</td>
                        <td>@appointment.ServiceName</td>
                        <td>@appointment.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@appointment.Status</td>
                        <td>
                            <a asp-action="ApproveAppointment" asp-route-id="@appointment.AppointmentID" class="btn btn-success btn-sm">Onayla</a>
                            <form asp-action="DeleteAppointment" asp-route-id="@appointment.AppointmentID" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
