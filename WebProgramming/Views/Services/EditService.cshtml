@model WebProgramming.Models.Service

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hizmet Düzenle</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Hizmet Düzenle</h1>
        <form asp-action="EditService" method="post" class="row g-3">
            <input type="hidden" name="ServiceID" value="@Model.ServiceID" />
            <div class="col-md-6">
                <label for="ServiceName" class="form-label">İşlem Adı</label>
                <input type="text" name="ServiceName" id="ServiceName" class="form-control" value="@Model.ServiceName" required>
            </div>
            <div class="col-md-3">
                <label for="Duration" class="form-label">Süre (Dakika)</label>
                <input type="number" name="Duration" id="Duration" class="form-control" value="@Model.Duration" required>
            </div>
            <div class="col-md-3">
                <label for="Price" class="form-label">Ücret (TL)</label>
                <input type="number" step="0.01" name="Price" id="Price" class="form-control" value="@Model.Price" required>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Güncelle</button>
                <a asp-action="ManageServices" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

