@model WebProgramming.Models.Salon

<h2>Salon Sil</h2>

<h3>Bu salonu silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Adres:</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Telefon:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Çalışma Saatleri:</dt>
        <dd class="col-sm-10">@Model.WorkingHours</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
